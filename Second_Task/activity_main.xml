<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperature Converter"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="20dp"
        android:paddingBottom="28dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/header_bar"/>



    <EditText
        android:id="@+id/editTextFahrenheit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/textViewHeading"
        android:hint="Enter Fahrenheit"
        android:inputType="text"
        android:layout_marginTop="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonConvertToF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextFahrenheit"
        android:layout_centerHorizontal="true"
        android:text="Convert to Celsius"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:background="@drawable/button_fahrenheit" />

    <TextView
        android:id="@+id/textViewResultCelsius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConvertToF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Result in Celsius: "
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextCelsius"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/textViewResultCelsius"
        android:layout_marginStart="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:hint="Enter Celsius" />

    <Button
        android:id="@+id/buttonConvertToC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCelsius"
        android:layout_centerHorizontal="true"
        android:text="Convert to Fahrenheit"
        android:textColor="#ffffff"
        android:layout_marginTop="16dp"
        android:padding="20dp"
        android:background="@drawable/button_celsius" />

    <TextView
        android:id="@+id/textViewResultFahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonConvertToC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Result in Fahrenheit: "
        android:textStyle="bold"
        android:textSize="18sp"/>

</RelativeLayout>
